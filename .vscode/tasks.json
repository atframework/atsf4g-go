{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build-lobbysvrOnlyBin",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-o",
        "../../build/install/lobbysvr/bin/lobbysvrd${if:os==windows}.exe${end}",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/lobbysvr"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Build-lobbysvrOnlyBin RACE",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-race",
        "-o",
        "../../build/install/lobbysvr/bin/lobbysvrd${if:os==windows}.exe${end}",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/lobbysvr"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Build-robot-only-bin",
      "type": "shell",
      "command": "go",
      "args": [
        "build",
        "-o",
        "../../build/install/robot/bin/robotd${if:os==windows}.exe${end}",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}/src/robot"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Build-fast-build",
      "type": "shell",
      "command": "task fast-build",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Build-build",
      "type": "shell",
      "command": "task build",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Deploy-Update Dependencies",
      "type": "shell",
      "command": "./update_dependency.sh",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build/install"
      },
      "windows": {
        "command": "./update_dependency.bat"
      },
      "group": "none"
    },
    {
      "label": "Deploy-GenerateServiceConfig",
      "type": "shell",
      "command": "generate_config.sh",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build/install"
      },
      "windows": {
        "command": "./generate_config.bat"
      },
      "group": "none"

      "args": [],
      "options": {
        "cwd": "${workspaceFolder}/build/install/lobbysvr/bin"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
    {
      "label": "Clean Pb go",
      "type": "shell",
      "command": "go",
      "args": [
        "run",
        "."
      ],
      "options": {
        "cwd": "${workspaceFolder}/tools/delete-generate-go"
      },
      "problemMatcher": "$go",
      "group": "none"
    },
  ]
}